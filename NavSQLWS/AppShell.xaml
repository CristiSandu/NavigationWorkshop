<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="NavSQLWS.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:NavSQLWS.Views"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate views:MainPage}"
                      Route="MainPage" />
        
        <ShellContent Title="Page1"
                      ContentTemplate="{DataTemplate views:NewPage1}"
                      Route="Page1" />
        
        <ShellContent Title="Page2"
                      ContentTemplate="{DataTemplate views:NewPage2}"
                      Route="Page2" />
    </TabBar>
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NavSQLWS.ViewModels"
             x:DataType="vm:InfoPageViewModel"
             x:Class="NavSQLWS.Views.InfoPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Image Source="{Binding Monkey.Image}"
               HeightRequest="500"
               WidthRequest="500" />

        <Label Text="{Binding Monkey.Name}"
               FontSize="Large" />

        <Label Text="{Binding Monkey.Details}"
               FontSize="Medium" />
    </VerticalStackLayout>
</ContentPage>
